<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white"
    android:id="@+id/write_fragment">

    <android.widget.Button
        android:id="@+id/write_post_btn"
        android:layout_width="75dp"
        android:layout_height="48dp"
        android:text="@string/postBtn"
        android:textColor="@color/black"
        android:textSize="17sp"
        android:textStyle="bold"
        android:background="@drawable/round_ver_2"
        android:backgroundTint="@color/orange"
        android:stateListAnimator="@null"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="10dp" />

    <EditText
        android:id="@+id/write_title_et"
        android:layout_width="375dp"
        android:layout_height="49dp"
        android:background="@drawable/write_edit_background"
        android:hint="@string/writeTitle"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/write_post_btn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="20dp"
        android:paddingHorizontal="10dp"
        android:autofillHints="no"
        android:inputType="text"
        tools:ignore="TextContrastCheck"
        android:maxLines="1"/>

    <ScrollView
        android:id="@+id/write_content_sv"
        android:layout_width="match_parent"
        android:layout_height="260dp"
        app:layout_constraintTop_toBottomOf="@id/write_title_et"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="20dp"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/write_edit_background">

            <EditText
                android:id="@+id/write_content_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/writeContent"
                android:textSize="16sp"
                android:textStyle="bold"
                android:gravity="top"
                android:background="@color/transparent"
                android:scrollbars="vertical"
                app:layout_constraintTop_toBottomOf="@id/write_image_iv"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:paddingHorizontal="10dp"
                android:paddingVertical="10dp"
                android:autofillHints="no"
                android:inputType="textMultiLine"
                tools:ignore="TextContrastCheck" />

            <ImageView
                android:id="@+id/write_image_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="10dp"
                android:scaleType="centerCrop"
                android:contentDescription="@string/importImage" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

    <LinearLayout
        android:id="@+id/write_image_upload_ll"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/write_content_sv"
        android:layout_marginTop="30dp">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/icon_image"
            android:layout_marginStart="30dp"
            android:layout_gravity="center"
            android:contentDescription="@string/writeUpload" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/writeUpload"
            android:textSize="15sp"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:layout_marginStart="10dp"/>

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <ImageButton
            android:id="@+id/write_upload_btn"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/icon_upload"
            android:background="@null"
            android:layout_gravity="center"
            android:layout_marginEnd="30dp"
            android:contentDescription="@string/writeUploadBtn" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/dark_gray"
        app:layout_constraintTop_toBottomOf="@id/write_image_upload_ll"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="1dp"
        android:layout_marginHorizontal="20dp"/>

    <LinearLayout
        android:id="@+id/write_category_ll"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/write_image_upload_ll">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/icon_category"
            android:layout_marginStart="30dp"
            android:layout_gravity="center"
            android:contentDescription="@string/writeUpload" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/writeCategory"
            android:textSize="15sp"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:layout_marginStart="10dp"/>

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/write_category_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/writeNoSetting"
            android:layout_gravity="center"
            android:textColor="@color/gray"/>

        <ImageButton
            android:id="@+id/write_category_btn"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/icon_arrow_right"
            android:background="@null"
            android:layout_gravity="center"
            android:layout_marginEnd="30dp"
            android:contentDescription="@string/writeCategory" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/dark_gray"
        app:layout_constraintTop_toBottomOf="@id/write_category_ll"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginHorizontal="20dp"/>

    <LinearLayout
        android:id="@+id/write_time_ll"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/write_category_ll">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/icon_clock"
            android:layout_marginStart="30dp"
            android:layout_gravity="center"
            android:contentDescription="@string/writeUpload" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/writeOpenDay"
            android:textSize="15sp"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:layout_marginStart="10dp"/>

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <RadioGroup
            android:id="@+id/write_setting_rg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginEnd="30dp">

            <RadioButton
                android:id="@+id/write_setting_rb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/writeSetting"
                app:buttonTint="@color/black"
                android:background="#00ffffff"/>

            <RadioButton
                android:id="@+id/write_no_setting_rb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/writeNoSetting"
                app:buttonTint="@color/black"
                android:background="#00ffffff"
                android:layout_marginStart="10dp"/>

        </RadioGroup>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@id/write_image_upload_ll"
        app:layout_constraintTop_toBottomOf="@id/write_time_ll"
        android:layout_marginEnd="20dp">

        <TextView
            android:id="@+id/write_date_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/writeDate"
            android:textStyle="bold"
            android:layout_marginEnd="10dp"
            android:layout_gravity="center"/>

        <ImageButton
            android:id="@+id/write_calendar_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_calendar"
            android:background="@null"
            android:layout_marginEnd="10dp"
            android:layout_gravity="center"
            android:contentDescription="@string/writeDate" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
